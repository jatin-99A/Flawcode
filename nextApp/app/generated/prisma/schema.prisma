generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  ADMIN
  USER
}

model user {
  id        Int      @id @default(autoincrement())
  clerkId   String   @unique
  email     String   @unique
  role      UserRole @default(USER)
  firstName String
  lastName  String
  imageUrl  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
